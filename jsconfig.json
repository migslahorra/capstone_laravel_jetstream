{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"]
    },
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false
  },
  "exclude": ["node_modules", "public"],
  "include": ["resources/js/**/*", "resources/**/*.vue"]
}
